rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Collection events
    match /events/{eventId} {
      // Autoriser la lecture et l'écriture pour tous (mode développement)
      // ⚠️ ATTENTION : Pour la production, ajoutez une authentification
      allow read, write: if true;
      
      // Pour la production avec authentification, utilisez :
      // allow read, write: if request.auth != null;
      
      // Règles plus strictes pour la production :
      // allow read: if request.auth != null;
      // allow create: if request.auth != null && request.resource.data.keys().hasAll(['nom', 'date', 'year', 'quarter']);
      // allow update: if request.auth != null && request.resource.data.keys().hasAll(['nom', 'date']);
      // allow delete: if request.auth != null;
    }
  }
}
